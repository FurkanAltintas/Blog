@model UserPasswordChangeDto

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="card mt-3">
    <div class="card-header">
        <h4 class="text-center"><span class="fas fa-key"></span> @ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="PasswordChange" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input asp-for="CurrentPassword" class="form-control" placeholder="Lütfen, şu anki şifrenizi giriniz" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Lütfen, yeni şifrenizi giriniz" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input asp-for="RepeatPassword" class="form-control" placeholder="Lütfen, tekrardan yeni şifrenizi giriniz" />
                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-danger btn-block"><span class="fas fa-times"></span> İptal</a>
            </div>
        </form>
    </div>
</div>