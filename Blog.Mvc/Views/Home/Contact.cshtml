@model EmailSendDto

@{
    Layout = "_ContactLayout";
    ViewData["Title"] = "İletişim";
    ViewBag.Author = "Furkan Altıntaş";
    ViewBag.Description = "Bizlerle iletişime geçin. Blog";
    ViewBag.Tags = "Contact, Contact Us, Bizle İletişime Geçin, İletişim";
}

<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form asp-controller="Home" asp-action="Contact" method="post">
        <h3>Bizlere bir mesaj bırakın</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input asp-for="Name" class="form-control" placeholder="İsminiz *" />
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="E-Posta Adresiniz *" />
                </div>
                <div class="form-group">
                    <input asp-for="Subject" class="form-control" placeholder="Konu / Başlık *" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btnContact">Gönder</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea asp-for="Message" class="form-control" placeholder="Mesajınız *" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>