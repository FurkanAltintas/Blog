@using Microsoft.Extensions.Options
@inject IOptionsSnapshot<WebsiteInfo> WebsiteInfo

@{
    var websiteInfo = WebsiteInfo.Value;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@websiteInfo.SeoDescription">
    <meta name="author" content="@websiteInfo.SeoAuthor">
    <meta name="keywords" content="@websiteInfo.SeoTags">
    <title>@ViewData["Title"] - @websiteInfo.Title</title>
    <link href="~/BlogHome/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/BlogHome/css/error-page-bg-animation.css" rel="stylesheet" />
</head>
<body class="wrapper">
    <div id="layoutError">
        <div id="layoutError_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

</body>
</html>